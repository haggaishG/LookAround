<?xml version="1.0" encoding="utf-8"?>

<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <!-- Bottom View Start-->
    <LinearLayout

        android:id="@+id/bottom_wrapper"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:layout_gravity="end">
        <!--What you want to show-->
        <View
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/trash_image_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/recycle_bin"/>
        <ImageButton
            android:id="@+id/marker_image_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/poc_marker_icon"/>
    </LinearLayout>
    <!-- Bottom View End-->

    <!-- Surface View Start -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/poi_picture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/no_image_paceholder" />

        <TextView
            android:id="@+id/poi_name"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"

            android:gravity="center_vertical"
            android:paddingLeft="3dp"

            android:textColor="@color/blue"
            android:textSize="18sp"
            tools:text="Hulla Vally" />

        <ImageView
            android:id="@+id/poi_marker"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:src="@drawable/poc_marker_icon"
            android:visibility="invisible" />


    </LinearLayout>
    <!-- Surface View End -->
</com.daimajia.swipe.SwipeLayout>